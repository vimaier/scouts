<mvc:View controllerName="friststep.view.Master" displayBlock="true" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<Page id="master1Page" title="{i18n>master1Title}">
		<headerContent>
			<Text text="Hello, Ted!"></Text>
			<Button id="btnHome" icon="sap-icon://person-placeholder" press="handleHomeBtn"/>
		</headerContent>
		<subHeader>
			<Bar id="master1SearchBar">
				<contentMiddle>
					<SearchField id="master1SearchField" placeholder="{i18n>master1SearchPlaceholder}" search="onSearch" showRefreshButton="{device>/isNoTouch}"
						tooltip="{i18n>master1SearchTooltip}" width="100%"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<l:VerticalLayout class="totalwidth">
				<Button press="handleBtn" id="homeBtn" text="Home" icon="sap-icon://home" class="totalwidth"/>
				<Button press="handleBtn" id="mediaBtn" text="Add new Media" icon="sap-icon://upload" class="totalwidth"/>
				<Button press="handleBtn" id="profileBtn" text="Edit Profile" icon="sap-icon://person-placeholder" class="totalwidth"/>
			</l:VerticalLayout>
		</content>
		
	</Page>
</mvc:View>