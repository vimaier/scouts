<mvc:View controllerName="friststep.view.Detail" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="sapUiFioriObjectPage" id="detailPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}" title="{i18n>detailTitle}">
		<content>
			<l:VerticalLayout>
			<!-- Your Assets -->
			<Panel class="totalwidth">
				<headerToolbar>
					<Toolbar height="3rem">
						<Button icon="sap-icon://refresh" press="handleMyAssetNav"/>
						<Title text="Your Assets: "/>
						<Title text="{yourasset>/title}"/>
						
					</Toolbar>
				</headerToolbar>
				<content>
						<core:HTML id="yourasset"/> 
				</content>
			</Panel>
			
			<!-- Community Assets -->
			<Panel class="totalwidth">
				<headerToolbar>
					<Toolbar>
							<Button icon="sap-icon://refresh" press="handleMyCommunityNav"/>
							<Button type="Accept" icon="sap-icon://accept" press="like" />
							<Button type="Reject" icon="sap-icon://decline" press="dislike"/>
						
							<Title text="Community Assets: "/>
							<Title text="{communityasset>/title}"/>
						
					</Toolbar>
				</headerToolbar>
				<content>
					<core:HTML id="communityasset"/>			
				</content>
			</Panel>
			</l:VerticalLayout>
		</content>
		<footer>
			<Toolbar></Toolbar>
		</footer>
	</Page>
</mvc:View>