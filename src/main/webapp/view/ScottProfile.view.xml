<mvc:View controllerName="friststep.view.Detail" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="sapUiFioriObjectPage" id="detailPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}" title="{i18n>detailTitle}">
		<headerContent>
		<l:VerticalLayout width="100%" >
		<l:content>

			<!-- <Panel>
				<headerToolbar>
					<Toolbar>
						<Title level="H2" text="Welcome to Mr.Scott profile" />
			<Button id="openMenu" icon="sap-icon://account"/>
						
					</Toolbar>
			</headerToolbar>

			</Panel> -->

		</l:content>
	</l:VerticalLayout>

	</headerContent>
		<content>
		<l:VerticalLayout class="page0">
			<l:HorizontalLayout class="page0">
			
				<Text text="Name:" class="text"/>
				<Input id="nameInput" type="Text" placeholder="The name of the user." >
				</Input>
			</l:HorizontalLayout>
			
			<l:HorizontalLayout class="page0">
			
				<Text text="Last Name:" class="text"/>
				<Input id="lastNameInput" type="Text" placeholder="The last name of the user." >
				</Input>
			</l:HorizontalLayout>
				<l:HorizontalLayout class="page0">
			
				<Text text="Company name :" class="text"/>
				<Input id="CompanyNameInput" type="Text" placeholder="The company name of the user." >
				</Input>
			</l:HorizontalLayout>
				<l:HorizontalLayout class="page0">
			
				<Text text="More about the user :" class="text"/>
				<Input id="MoreInput" type="Text" placeholder="Change more info for the user." class="bigInput" >
				</Input>
			</l:HorizontalLayout>
			
	</l:VerticalLayout>
			
		</content>
	<footer>
			<Toolbar>
				<Button type="Accept" text="Like the scout" class="btnFooter">
					
				</Button>
				<Button type="Reject" text="Don't like the scout " class="btnFooter" >
					
				</Button>
				
			</Toolbar>
		</footer>
		
	</Page>
</mvc:View>